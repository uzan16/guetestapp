{{#> management}}
  {{#*inline "content"}}
    <form action="{{#if isEdit}}update/{{data.id}}{{else}}create{{/if}}" method="post">
        <div class="group">
            <label>Username</label>
            <input type="text" name="username" value="{{#if isEdit}}{{data.username}}{{/if}}" />
        </div>
        <div class="group">
            <label>Full Name</label>
            <input type="text" name="fullname" value="{{#if isEdit}}{{data.fullname}}{{/if}}" />
        </div>
        <div class="group">
            <label>Password</label>
            <input type="password" name="password" value="" placeholder="{{#if isEdit}}Fill in to change the password{{/if}}" />
        </div>
        <center>
            <input type="submit" value="Submit">
        </center>
    </form> 
  {{/inline}}
{{/management}}